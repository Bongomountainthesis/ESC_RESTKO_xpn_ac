core_aves <- sapply(core_D4,function(x){
   #find rows from aves that are in each cluster 
   core_exp <- aves[rownames(x),]
})

## for each probe in core_aves, perform DTW and pull in DeSeq data to plot
core_1 <- core_aves[[1]]
core_2 <- core_aves[[2]]
core_3 <- core_aves[[3]]
core_4 <- core_aves[[4]]
core_5 <- core_aves[[5]]
core_6 <- core_aves[[6]]

core_1_dtw <- 1
for(i in 1:nrow(core_1)){dtw_res <- dtw(core_1[i,1:4],core_1[i,5:8], keep = TRUE,step = rabinerJuangStepPattern(6,"c"))
			      core_1_dtw[i] <- ifelse(mean(core_1[i,1:4]) > mean(core_1[i,5:8]),(dtw_res$distance * -1),dtw_res$distance)
				}
core_1 <- cbind(core_1, core_1_dtw)

core_2_dtw <- 1
for(i in 1:nrow(core_2)){dtw_res <- dtw(core_2[i,1:4],core_2[i,5:8], keep = TRUE,step = rabinerJuangStepPattern(6,"c"))
			      core_2_dtw[i] <- ifelse(mean(core_2[i,1:4]) > mean(core_2[i,5:8]),(dtw_res$distance * -1),dtw_res$distance)
				}
core_2 <- cbind(core_2, core_2_dtw)

