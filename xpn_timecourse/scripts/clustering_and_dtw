   #find rows from aves that are in each cluster 
   core_exp <- avesFC[rownames(x),]
   core_exp.o <- core_exp[order(abs(core_exp[,"logFC"]),decreasing = TRUE),]
   core_exp <- core_exp.o[,1:8]
   #take average of all genes in each cluster across time points
   colMeans(core_exp[1:10,])
})

